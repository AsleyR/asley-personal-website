generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model projects {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  description String
  image       String
  repoUrl     String
  role        String
  tags        String[]
  title       String
  url         String?
  order       Int
}

model work {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  company_name     String   @map("company-name")
  description      String
  end_date         DateTime @map("end-date")
  responsabilities String[]
  start_date       DateTime @map("start-date")
  title            String
  order            Int
}
